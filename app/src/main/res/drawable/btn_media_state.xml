<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true">
    <item android:id="@+id/pause_state" android:drawable="@drawable/ic_pause" android:state_checked="true"/>
    <item android:id="@+id/play_state" android:drawable="@drawable/ic_play" />

    <transition
        android:drawable="@drawable/ic_pause"
        android:fromId="@id/pause_state"
        android:toId="@id/play_state" />

    <transition
        android:drawable="@drawable/ic_play"
        android:fromId="@id/play_state"
        android:toId="@id/pause_state" />
</animated-selector>