<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MeditationHealthFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="@dimen/mediumSpace"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumSpace">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="00:00"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/pbMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackColor="#4301A39D"
            app:thumbColor="@color/colorAccent"
            android:layout_marginStart="@dimen/mediumSpace"
            android:layout_marginEnd="@dimen/mediumSpace"
            android:layout_toEndOf="@id/tvStartTime"
            android:layout_toStartOf="@id/tvEndTime"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="06:00"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_keyboard_arrow_left"/>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pause"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btnForward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_keyboard_arrow_right"/>

    </LinearLayout>

</LinearLayout>