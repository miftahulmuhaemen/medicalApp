<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnSetContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_contact"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/mediumSpace"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/mediumSpace"
        android:layout_marginEnd="@dimen/mediumSpace"
        android:layout_centerInParent="true">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_circle"
            app:backgroundTint="@color/red"
            android:text="Help!"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeling not okay? Press for help."
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/mediumSpace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press the button above to notify your trusted contacts that you are okay"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/mediumSpace"/>

    </LinearLayout>


</RelativeLayout>