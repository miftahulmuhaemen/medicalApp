<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mediumSpace"
    tools:context=".ui.user.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumSpace">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:lines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="0dp"
            android:paddingEnd="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/imgProfile"/>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorAccent"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <Button
        android:id="@+id/btnToJournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to your Journal"
        android:layout_marginTop="@dimen/mediumSpace"
        android:drawablePadding="@dimen/mediumSpace"
        android:drawableEnd="@drawable/ic_arrow_forward"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artikel Terbaru"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/mediumSpace"
        android:layout_marginBottom="@dimen/smallSpace"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_article_fit"/>


</LinearLayout>